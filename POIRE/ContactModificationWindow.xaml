<Window x:Class="POIRE.ContactModificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ContactsManager"
        Title="Modifier Contact" Height="300" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="5">
            <TextBox x:Name="TB_Name" Margin="5" />
            <TextBox x:Name="FirstNameTextBox" Margin="5" />
            <TextBox x:Name="EmailTextBox" Margin="5" />
            <TextBox x:Name="PhoneTextBox" Margin="5" />
            <TextBox x:Name="PostalCodeTextBox" Margin="5" />
            <TextBox x:Name="CityTextBox" Margin="5" />
            <TextBox x:Name="BirthDateTextBox" Margin="5" />
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="SaveButton" Content="Save" Margin="5" Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>